<launch>
    <arg name="robot_name" default="roboy_icecream"/>
    <arg name="model_name" default="$(arg robot_name)"/>
    <arg name="start_controllers" default="neck_axis0 neck_axis1 neck_axis2 shoulder_left_axis0 shoulder_left_axis1 shoulder_left_axis2 elbow_left wrist_left_axis0 wrist_left_axis1 wrist_left_axis2 shoulder_right_axis0 shoulder_right_axis1 shoulder_right_axis2 elbow_right wrist_right_axis0 wrist_right_axis1 wrist_right_axis2"/>
    <arg name="gazebo" default="true"/>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="false"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="external_robot_state" default="false"/>
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0"/>
    <arg name="physics" default="ode"/>

    <param name="robot_name" type="string" value="$(arg robot_name)"  />
    <param name="model_name" type="string" value="$(arg model_name)"  />
    <param name="robot_description" textfile="$(find robots)/$(arg model_name)/model.urdf" />
    <param name="urdf_file_path" type="string" value="$(find robots)/$(arg model_name)/model.urdf" />
    <param name="cardsflow_xml" type="string" value="$(find robots)/$(arg model_name)/cardsflow.xml" />
    <rosparam file="$(find robots)/$(arg model_name)/config/controller.yaml" command="load"/>
    <rosparam file="$(find robots)/$(arg model_name)/config/endeffectors.yaml" command="load"/>
    <param name="musclemodel_Kp" type="double" value="500"  />
    <param name="musclemodel_Kd" type="double" value="0"  />
    <rosparam param="q_target">[0.0, 0.0, 0.0]</rosparam>
    <param name="min_force" type="double" value="0"  />
    <param name="max_force" type="double" value="100000"  />
    <param name="controller" type="int" value="2"  />
    <param name="external_robot_state" type="bool" value="$(arg external_robot_state)"/>
    <node name="controller_manager"
          pkg="controller_manager"
          type="spawner"
          args="$(arg start_controllers)" />

    <node name="robot_controller"
          pkg="kindyn"
          type="$(arg robot_name)"
          respawn="false"
          output="screen"
          launch-prefix="gdb -ex run"
    />

    <group if="$(arg gazebo)">
        <include file="$(find gazebo_ros)/launch/empty_world.launch">
            <arg name="world_name" value="$(find gelatio_gazebo)/world.world"/>
            <arg name="debug" value="$(arg debug)"/>
            <arg name="gui" value="$(arg gui)"/>
            <arg name="paused" value="$(arg paused)"/>
            <arg name="use_sim_time" value="$(arg use_sim_time)"/>
            <arg name="headless" value="$(arg headless)"/>
            <arg name="physics" value="$(arg physics)"/>
        </include>

        <node name="spawn_roboy" pkg="gazebo_ros" type="spawn_model" args="-file $(find robots)/roboy_icecream/model.urdf -urdf -model roboy_icecream -x $(arg x) -y $(arg y) -z $(arg z)"  />

        <node name="spawn_platform" pkg="gazebo_ros" type="spawn_model" respawn="false"  args="-sdf -file $(find gelatio_gazebo)/world/models/platform/model.sdf -model platform -x 0.9 -y 0.9 -z 0"/>

        <param name="ice_cream_description"
            command="$(find xacro)/xacro '$(find scooping_cv)/models/ice_cream_trays.xacro'" />

        <node name="spawn_icecream" pkg="gazebo_ros" type="spawn_model" respawn="false"  args="-urdf -model ice_cream_trays -param ice_cream_description -x 0.7 -y 1 -z 0"/>

        <node name="spawn_cup" pkg="gazebo_ros" type="spawn_model" respawn="false"  args="-sdf -file $(find gelatio_gazebo)/world/models/icecream_cup/model.sdf -model icecream_cup -x 1.1 -y 1 -z 1"/>
        
        <node name="publish_cup" pkg="gelatio_gazebo" type="publish_cup.py" output="screen"/>

    </group>

</launch>

